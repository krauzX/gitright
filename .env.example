# Server
PORT=8080
HOST=localhost
ENV=development
LOG_LEVEL=info
HTTP_TIMEOUT=300s
FRONTEND_URL=http://localhost:3000

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/callback
GITHUB_OAUTH_SCOPES=repo,user:email

# Google AI (users provide their own key via frontend)
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-2.5-flash-preview-0409-2025
GOOGLE_AI_USE_GROUNDING=false
GOOGLE_AI_TIMEOUT=300s
GOOGLE_AI_MAX_RETRIES=2

# Database
DATABASE_URL=postgresql://gitright:gitright@localhost:5432/gitright?sslmode=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=5m

# Sessions / Auth
SESSION_SECRET=change_this_to_a_random_string_in_production
SESSION_MAX_AGE=86400
TOKEN_ENCRYPTION_KEY=change_this_to_32_byte_key_for_aes256

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# HTTPS (optional)
ENABLE_HTTPS=false
CERT_FILE=
KEY_FILE=
